# Google Sheets Configuration
SPREADSHEET_ID=your_spreadsheet_id_here
# Nájdeš v URL: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit

# Google Service Account Credentials (Base64 encoded)
# Vytvor Service Account na https://console.cloud.google.com/
# Stiahni JSON súbor a zakóduj ho: base64 -i credentials.json
GOOGLE_CREDENTIALS_BASE64=your_base64_encoded_credentials_here

# API Key pre autentifikáciu (voliteľné, pre zabezpečenie API)
API_KEY=your_secret_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Názvy hárkov v Google Sheets
SHEET_NAME_FASTING=Fasting_Plan
SHEET_NAME_JEDLO=Planovane_Jedlo


